{
  "name": "ccgraph",
  "version": "0.1.0",
  "description": "Claude Code usage graph CLI tool with React Ink",
  "main": "index.tsx",
  "bin": {
    "ccgraph": "./index.tsx"
  },
  "module": "index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "biome check .",
    "format": "biome check --write .",
    "format:unsafe": "biome check --write --unsafe .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:build": "tsc --noEmit",
    "update:all": "bun update --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/asciichart": "^1.5.8",
    "@types/bun": "latest",
    "@types/node": "^24.0.4",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "asciichart": "^1.5.25",
    "ink": "^6.0.1",
    "react": "^19.1.0"
  }
}
